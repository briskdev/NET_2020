@model List<ItemModel>
@{
    ViewData["Title"] = "MyCart";
}

@if (Model.Count == 0)
{
    <h3>Your cart is empty!</h3>
}
else
{
    <table class="table table-striped">
        <tr>
            <th>Item name</th>
            <th>Item price</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
            </tr>
        }
    </table>
}